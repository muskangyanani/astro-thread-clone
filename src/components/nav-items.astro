---
import homeIcon from '../images/home.png'
import searchIcon from '../images/search.png'
import createIcon from '../images/create.png'
import likeIcon from '../images/like.png'
import userIcon from '../images/user.png'
---

<!-- TODO: fix this for search page -->
<div class="relative flex justify-center">
  <div
    class="w-full bg-[#101010] fixed bottom-0 flex justify-evenly sm:static sm:flex sm:justify-center sm:gap-14"
  >
    <li
      class="p-2 px-2 w-12 transition duration-300 ease-in-out hover:bg-neutral-900 rounded-lg"
    >
      <a href="/"><img src={homeIcon.src} alt="" /></a>
    </li>
    <li
      class="p-2 px-2 w-12 transition duration-200 ease-in-out hover:bg-neutral-900 rounded-lg"
    >
      <a href="/search"><img src={searchIcon.src} alt="" /></a>
    </li>
    <li
      class="p-2 px-2 w-12 transition duration-200 ease-in-out hover:bg-neutral-900 rounded-lg"
    >
      <a href="/"><img src={createIcon.src} alt="" /></a>
    </li>
    <li
      class="p-2 px-2 w-12 transition duration-200 ease-in-out hover:bg-neutral-900 rounded-lg"
    >
      <a href="/activity"><img src={likeIcon.src} alt="" /></a>
    </li>
    <li
      class="p-2 px-2 w-12 transition duration-200 ease-in-out hover:bg-neutral-900 rounded-lg"
    >
      <a href="profile"><img src={userIcon.src} alt="" /></a>
    </li>
  </div>
</div>
